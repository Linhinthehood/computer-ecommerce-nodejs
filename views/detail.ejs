<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %>
    </title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .main-container {
            max-width: 1200px;
            margin: 30px auto;
        }

        /* Product Slider Styles */
        .product-slider {
            position: relative;
            overflow: hidden;
        }

        .slider-container {
            display: flex;
            transition: transform 0.3s ease-in-out;
        }

        .slider-item {
            min-width: 100%;
            box-sizing: border-box;
        }

        /* Slider Navigation */
        .slider-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 10;
            border: none;
            outline: none;
        }

        .slider-nav:hover {
            background-color: rgba(255, 255, 255, 0.9);
        }

        .slider-nav-left {
            left: 10px;
        }

        .slider-nav-right {
            right: 10px;
        }

        /* Thumbnail Styles */
        .thumbnail-slider {
            display: flex;
            overflow-x: auto;
            gap: 10px;
            padding: 10px 0;
            scrollbar-width: thin;
        }

        .thumbnail-slider::-webkit-scrollbar {
            height: 5px;
        }

        .thumbnail-slider::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }

        .thumbnail {
            flex: 0 0 50px;
            height: 50px;
            cursor: pointer;
            opacity: 0.7;
            transition: opacity 0.2s;
        }

        .thumbnail.active {
            opacity: 1;
            border: 2px solid #0d6efd;
        }

        .thumbnail:hover {
            opacity: 1;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <%- include('partials/navbar') %>
    
    <!-- Breadcrumb -->
    <div style="margin-top: 60px;"></div>
    <div class="container mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item"><a href="/<%= product.type%>" class="text-decoration-none">
                        <%= product.type%>
                    </a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%= product.name %>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Main Content -->
    <!-- for each section -->
    <main class="container main-container py-4 bg-white shadow rounded my-3">
        <div class="row">
            <!-- Product Images Section -->
            <div class="col-12 col-md-6 mb-4">
                <div class="product-slider">
                    <button class="slider-nav slider-nav-left" id="prevSlide">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <div class="slider-container" id="imageSlider">
                        <% if (product.images && product.images.length > 0) { %>
                            <% product.images.forEach((img, index) => { %>
                                <div class="slider-item" style="height: 575px;">
                                    <img class="card-img-top"
                                         src="/<%= img.replace(/\\/g, '/') %>"
                                         alt="<%= product.name %> - Image <%= index + 1 %>"
                                         style="width: 100%; height: 100%; object-fit: contain;" />
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="slider-item">
                                <img class="card-img-top" src="/assets/placeholder.jpg" alt="No image available" />
                            </div>
                        <% } %>
                    </div>
                    <button class="slider-nav slider-nav-right" id="nextSlide">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>

                <!-- Thumbnail Images -->
                <div class="thumbnail-slider mt-3" id="thumbnailSlider">
                    <% product.images.forEach((img, index)=> { %>
                        <img src="/<%= img.replace(/\\/g, '/') %>"
                             class="img-fluid rounded thumbnail <%= index === 0 ? 'active' : '' %>"
                             data-index="<%= index %>" alt="Thumbnail <%= index + 1 %>">
                    <% }); %>
                </div>
            </div>

            <!-- Product Details Section -->
            <div class="col-12 col-md-6">
                <div class="ps-md-4">
                    <!-- Brand & Category -->
                    <div class="d-flex justify-content-between mb-2">
                        <span class="badge bg-secondary"><%= product.brand %></span>
                        <span class="badge bg-primary"><%= product.category %></span>
                    </div>

                    <!-- Product Title -->
                    <h2 class="fw-medium mb-2">
                        <%= product.name %>
                    </h2>

                    <!-- Short Description -->
                    <p class="card-text mb-3"><%= product.short_description %></p>

                    <!-- Tags -->
                    <div class="mb-3">
                        <% product.tags.forEach(tag => { %>
                            <span class="badge bg-light text-dark me-1">#<%= tag %></span>
                        <% }); %>
                    </div>

                    <!-- Variants -->
                    <div class="mb-4">
                        <h6 class="fw-medium mb-2">Available Options:</h6>
                        <form id="variantForm">
                            <% product.variants.forEach((variant, idx) => { %>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="variantOption" id="variant_<%= idx %>" value="<%= idx %>">
                                    <label class="form-check-label" for="variant_<%= idx %>">
                                        <%= variant.type %> - <span class="fw-bold"><%= variant.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> ₫</span>
                                    </label>
                                </div>
                            <% }); %>
                        </form>
                    </div>

                    <!-- Rating and Reviews -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center">
                            <% for(let i = 0; i < Math.floor(product.average_rating); i++) { %>
                                <i class="bi bi-star-fill text-warning"></i>
                            <% } %>
                            <% if(product.average_rating % 1 !== 0) { %>
                                <i class="bi bi-star-half text-warning"></i>
                            <% } %>
                            <span class="ms-1">(<%= product.average_rating %>)</span>
                        </div>
                        <span class="text-muted"><%= product.total_reviews %> reviews</span>
                    </div>

                    <!-- Quantity and Add to Cart -->
                    <div class="d-flex mb-4 align-items-center">
                        <div class="input-group me-3" style="width: 130px;">
                            <button class="btn btn-outline-dark" type="button" id="decreaseQuantity">-</button>
                            <input type="text" class="form-control text-center" id="quantityInput" value="1">
                            <button class="btn btn-outline-dark" type="button" id="increaseQuantity">+</button>
                        </div>
                        <button
                            class="btn btn-dark flex-grow-1 addToCart"
                            data-id="<%= product._id %>"
                            data-name="<%= product.name %>"
                            data-thumbnail="/<%= product.images && product.images.length > 0 ? product.images[0].replace(/\\/g, '/') : 'assets/placeholder.jpg' %>"
                        >
                            <i class="bi bi-cart-fill me-2"></i>Add to Cart
                        </button>
                    </div>

                    <!-- Additional Info -->
                    <div class="d-flex flex-wrap">
                        <div class="me-4 mb-2">
                            <i class="fas fa-truck text-muted me-2"></i>
                            <span>Free shipping</span>
                        </div>
                        <div class="me-4 mb-2">
                            <i class="fas fa-undo text-muted me-2"></i>
                            <span>30 days return</span>
                        </div>
                        <div class="mb-2">
                            <i class="fas fa-check-circle text-muted me-2"></i>
                            <span>Quality guaranteed</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details Tabs -->
        <div class="row mt-5">
            <div class="col-12">
                <ul class="nav nav-tabs" id="productTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="description-tab" data-bs-toggle="tab"
                            data-bs-target="#description" type="button" role="tab" aria-controls="description"
                            aria-selected="true">Description</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="details-tab" data-bs-toggle="tab" data-bs-target="#details"
                            type="button" role="tab" aria-controls="details" aria-selected="false">Details</button>
                    </li>
                </ul>
                <div class="tab-content p-4 border border-top-0 rounded-bottom" id="productTabsContent">
                    <div class="tab-pane fade show active" id="description" role="tabpanel"
                        aria-labelledby="description-tab">
                        <p><strong><%= product.short_description %></strong></p>
                        <p><%= product.description %></p>
                    </div>
                    <div class="tab-pane fade" id="details" role="tabpanel" aria-labelledby="details-tab">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <h5 class="fw-medium mb-3">Product Specifications</h5>
                                <ul class="list-unstyled">
                                    <% if (product.specifications) { %>
                                        <% if (product.specifications.cpu_series) { %>
                                            <li class="mb-2"><span class="fw-medium">CPU Series:</span> <%= product.specifications.cpu_series %></li>
                                        <% } %>
                                        <% if (product.specifications.ram_capacity) { %>
                                            <li class="mb-2"><span class="fw-medium">RAM Capacity:</span> <%= product.specifications.ram_capacity %></li>
                                        <% } %>
                                        <% if (product.specifications.ram_type) { %>
                                            <li class="mb-2"><span class="fw-medium">RAM Type:</span> <%= product.specifications.ram_type %></li>
                                        <% } %>
                                        <% if (product.specifications.ram_brand) { %>
                                            <li class="mb-2"><span class="fw-medium">RAM Brand:</span> <%= product.specifications.ram_brand %></li>
                                        <% } %>
                                        <% if (product.specifications.ssd_brand) { %>
                                            <li class="mb-2"><span class="fw-medium">SSD Brand:</span> <%= product.specifications.ssd_brand %></li>
                                        <% } %>
                                        <% if (product.specifications.ssd_capacity) { %>
                                            <li class="mb-2"><span class="fw-medium">SSD Capacity:</span> <%= product.specifications.ssd_capacity %></li>
                                        <% } %>
                                        <% if (product.specifications.hdd_brand) { %>
                                            <li class="mb-2"><span class="fw-medium">HDD Brand:</span> <%= product.specifications.hdd_brand %></li>
                                        <% } %>
                                        <% if (product.specifications.hdd_capacity) { %>
                                            <li class="mb-2"><span class="fw-medium">HDD Capacity:</span> <%= product.specifications.hdd_capacity %></li>
                                        <% } %>
                                        <% if (product.specifications.storage_type) { %>
                                            <li class="mb-2"><span class="fw-medium">Storage Type:</span> <%= product.specifications.storage_type %></li>
                                        <% } %>
                                    <% } else { %>
                                        <li class="mb-2">No specifications available.</li>
                                    <% } %>
                                </ul>
                            </div>
                            <div class="col-12 col-md-6">
                                <h5 class="fw-medium mb-3">Care Instructions</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="fas fa-plug text-muted me-2"></i> Unplug device before cleaning</li>
                                    <li class="mb-2"><i class="fas fa-tint-slash text-muted me-2"></i> Keep away from liquids and moisture</li>
                                    <li class="mb-2"><i class="fas fa-thermometer-half text-muted me-2"></i> Avoid extreme temperatures</li>
                                    <li class="mb-2"><i class="fas fa-bolt text-muted me-2"></i> Use a surge protector</li>
                                    <li class="mb-2"><i class="fas fa-box-open text-muted me-2"></i> Store in a dry, dust-free environment</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

            <!-- User Reviews & Comments Section -->
            <div class="row mt-5">
                <div class="col-12">
                    <h3 class="fw-medium mb-4">Customer Reviews</h3>
                    <!-- Button to toggle comment form -->
                    <button class="btn btn-outline-primary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#reviewCollapse" aria-expanded="false" aria-controls="reviewCollapse">
                        Leave a Review
                    </button>
                    <!-- Collapsible comment/rating form -->
                    <div class="collapse" id="reviewCollapse">
                        <div class="card card-body mb-4">
                            <form id="reviewForm">
                                <div class="mb-3">
                                    <label class="form-label">Your Rating:</label>
                                    <div id="starRating" class="mb-2">
                                        <% for(let i=1; i<=5; i++) { %>
                                            <i class="bi bi-star star-rating" data-value="<%= i %>" style="font-size: 1.5rem; color: #ccc; cursor: pointer;"></i>
                                        <% } %>
                                    </div>
                                    <input type="hidden" name="rating" id="ratingInput" value="0">
                                </div>
                                <div class="mb-3">
                                    <label for="comment" class="form-label">Your Comment:</label>
                                    <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit Review</button>
                            </form>
                        </div>
                    </div>
                    <!-- Placeholder for comments list -->
                    <div id="commentsList">
                        <p class="text-muted">No reviews yet. Be the first to review this product!</p>
                    </div>
                </div>
            </div>

            <!-- You May Also Like Section -->
        <div class="row mt-5">
            <div class="col-12">
                <h3 class="fw-medium mb-4">You May Also Like</h3>
                <div class="row row-cols-2 row-cols-md-4 g-4">
                    <!-- Related Product 1 -->
                    <div class="col">
                        <div class="card h-100">
                            <img src="../assets/LAPTOP/ASUSTUFGamingA15_1.webp" class="card-img-top" alt="Related Product 1">
                            <div class="card-body">
                                <h6 class="card-title ">Slim Fit Jeans</h6>

                                <p class="fw-medium">600.000</p>
                            </div>
                        </div>
                    </div>

                    <!-- Related Product 2 -->
                    <div class="col">
                        <div class="card h-100">
                            <img src="../assets/LAPTOP/DELLInspiron16 lus_2.webp" class="card-img-top" alt="Related Product 2">
                            <div class="card-body">
                                <h6 class="card-title">Casual Hooded Sweatshirt</h6>

                                <p class="fw-medium">600.000</p>
                            </div>
                        </div>
                    </div>

                    <!-- Related Product 3 -->
                    <div class="col">
                        <div class="card h-100">
                            <img src="../assets/LAPTOP/LenovoLegion5_2.webp" class="card-img-top" alt="Related Product 3">
                            <div class="card-body">
                                <h6 class="card-title">Long Sleeve Polo Shirt</h6>

                                <p class="fw-medium">350.000</p>
                            </div>
                        </div>
                    </div>

                    <!-- Related Product 4 -->
                    <div class="col">
                        <div class="card h-100">
                            <img src="../assets/RAM/RAMKingstonFuryBeast16GBDDR4_2.webp" class="card-img-top" alt="Related Product 4">
                            <div class="card-body">
                                <h6 class="card-title">Lightweight Jacket</h6>

                                <p class="fw-medium">200.000</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <%- include('partials/footer') %>

    <!-- Modal giỏ hàng -->
    <div id="cartModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Giỏ hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <ul id="cartItems" class="list-group"></ul>
                </div>
                <div class="modal-footer">
                    <button id="clearCart" class="btn btn-danger me-auto">Xóa tất cả</button>
                    <a href="/cart" class="btn btn-primary">Go to Cart</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
    <script>
        document.querySelector('.addToCart').addEventListener('click', function (e) {
            const variantIdx = document.querySelector('input[name="variantOption"]:checked');
            const quantity = document.getElementById('quantityInput').value;
            if (!variantIdx) {
                alert('Please select Option');
                return;
            }
            // You can now use variantIdx.value (index of selected variant) and quantity
            // Example: send to your cart logic via AJAX or form submission
            // Example:
            // addToCart(productId, variantIdx.value, quantity);
        });
    </script>
    <script>
        window.productVariants = JSON.parse('<%- JSON.stringify(product.variants) %>');

        document.querySelectorAll('.star-rating').forEach(star => {
            star.addEventListener('mouseover', function () {
                const val = parseInt(this.getAttribute('data-value'));
                document.querySelectorAll('.star-rating').forEach(s => {
                    s.style.color = parseInt(s.getAttribute('data-value')) <= val ? '#ffc107' : '#ccc';
                });
            });
            star.addEventListener('mouseout', function () {
                const selected = parseInt(document.getElementById('ratingInput').value);
                document.querySelectorAll('.star-rating').forEach(s => {
                    s.style.color = parseInt(s.getAttribute('data-value')) <= selected ? '#ffc107' : '#ccc';
                });
            });
            star.addEventListener('click', function () {
                const val = parseInt(this.getAttribute('data-value'));
                document.getElementById('ratingInput').value = val;
                document.querySelectorAll('.star-rating').forEach(s => {
                    s.style.color = parseInt(s.getAttribute('data-value')) <= val ? '#ffc107' : '#ccc';
                });
            });
        });

        // Unique key for this product's reviews
        const productId = "<%= product._id %>";
        const reviewsKey = `product_reviews_${productId}`;

        // Function to render reviews from localStorage
        function renderReviews() {
            const commentsList = document.getElementById('commentsList');
            commentsList.innerHTML = '';
            const reviews = JSON.parse(localStorage.getItem(reviewsKey)) || [];
            if (reviews.length === 0) {
                commentsList.innerHTML = '<p class="text-muted">No reviews yet. Be the first to review this product!</p>';
                return;
            }
            reviews.slice().reverse().forEach(review => {
                const reviewHTML = `
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                ${'<i class="bi bi-star-fill text-warning"></i>'.repeat(review.rating)}
                                ${'<i class="bi bi-star text-warning"></i>'.repeat(5 - review.rating)}
                            </div>
                            <p class="mb-0">${review.comment.replace(/\n/g, '<br>')}</p>
                            <small class="text-muted">${review.time || 'Just now'}</small>
                        </div>
                    </div>
                `;
                commentsList.insertAdjacentHTML('beforeend', reviewHTML);
            });
        }

        // Render reviews on page load
        renderReviews();

        // Handle review form submission and display new comment instantly
        document.getElementById('reviewForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const rating = parseInt(document.getElementById('ratingInput').value);
            const comment = document.getElementById('comment').value.trim();
            if (!rating || !comment) {
                alert('Please provide both a rating and a comment.');
                return;
            }

            // Get current reviews, add new one
            const reviews = JSON.parse(localStorage.getItem(reviewsKey)) || [];
            const now = new Date();
            reviews.push({
                rating,
                comment,
                time: now.toLocaleString()
            });
            localStorage.setItem(reviewsKey, JSON.stringify(reviews));

            // Re-render reviews
            renderReviews();

            // Reset form
            document.getElementById('reviewForm').reset();
            document.getElementById('ratingInput').value = 0;
            document.querySelectorAll('.star-rating').forEach(s => {
                s.style.color = '#ccc';
            });

            // Optionally collapse the form
            var reviewCollapse = bootstrap.Collapse.getOrCreateInstance(document.getElementById('reviewCollapse'));
            reviewCollapse.hide();
        });
    </script>
   
</body>

</html>