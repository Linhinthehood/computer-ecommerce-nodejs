            </div>

    <!-- Team Section -->
    <div class="container mt-5 mb-5 pt-5 ">
        <div class="row">
            <div class="col-md-4">
                <div class="card team-card">
                    <img src="/assets/AboutUs/Bao.png" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Lê Gia Bảo</h5>
                        <p class="card-text">522K0013</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card team-card">
                    <img src="/assets/AboutUs/Dang.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Trần Đinh Nhất Đăng</h5>
                        <p class="card-text">522K0003</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card team-card">
                    <img src="/assets/AboutUs/Linh.jpg" class="card-img-top" alt="Team Member">
                    <div class="card-body text-center">
                        <h5 class="card-title">Hồ Phạm Đức Linh</h5>
                        <p class="card-text">522K0002</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
