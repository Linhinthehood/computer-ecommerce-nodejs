<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login & Sign Up</title>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <!-- Bootstrap icons-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    main {
      min-height: 70vh;
      /* Đảm bảo phần main đủ chiều cao, tùy chỉnh theo ý bạn */
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .main-content {
      background-color: #f8f9fa;
      /* Replace with your desired color */
    }

    /* Căn chỉnh form */
    .auth-form {
      max-width: 400px;
      margin: 0 auto;
    }

    /* Chỉnh form label + input cho rõ ràng */
    .form-label {
      font-weight: 500;
    }

    .address-section {
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .address-section h6 {
      margin-bottom: 15px;
      color: #495057;
    }

    .form-text {
      font-size: 0.875rem;
      color: #6c757d;
    }

    .alert {
      border-radius: 8px;
    }
  </style>
</head>

<body class="d-flex flex-column min-vh-100">
  <!-- HEADER / NAVBAR -->
  <%- include('partials/navbar') %>

  <div style="margin: 80px 0px 30px 0px;">
    <!-- Đoạn hiển thị alert lỗi nếu có -->
    <!-- MAIN CONTENT -->
    <main class="container flex-grow-1">
      <div class="row w-100">
        <!-- Đăng nhập (Login) - Bên trái -->
        <div class="col-12 col-md-6 mb-5 mb-md-0">
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="mb-4 text-center">Login</h3>
              <hr>
              <form action="/login" method="POST" class="auth-form">
                <div class="mb-3">
                  <label for="loginEmail" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="loginEmail" name="email" value="<%= formData.email || '' %>" required />
                </div>
                <div class="mb-3">
                  <label for="loginPassword" class="form-label">Password</label>
                  <input type="password" class="form-control" id="loginPassword" name="password" required />
                  <div class="form-text">Enter the password sent to your email.</div>
                </div>
                <% if (loginError) { %>
                  <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    <%= loginError %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% } %>
                <div class="mb-3">
                  <a href="#!">Forgot password?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Đăng ký (Sign Up) - Bên phải -->
        <div class="col-12 col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h3 class="mb-4 text-center">Sign Up</h3>
              <hr>
              <form action="/register" method="POST" class="auth-form">
                <!-- Personal Information -->
                <div class="mb-4">
                  <h6 class="text-muted">Personal Information</h6>
                  <div class="mb-3">
                    <label for="registerName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="registerName" name="name" value="<%= formData.name || '' %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="registerEmail" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="registerEmail" name="email" value="<%= formData.email || '' %>" required />
                    <div class="form-text">Your password will be sent to this email.</div>
                  </div>
                  <div class="mb-3">
                    <label for="registerPhone" class="form-label">Phone number</label>
                    <input type="tel" class="form-control" id="registerPhone" name="phone" value="<%= formData.phone || '' %>" required />
                  </div>
                </div>

                <!-- Shipping Address -->
                <div class="address-section">
                  <h6 class="mb-3">Shipping Address</h6>
                  <div class="mb-3">
                    <label for="street" class="form-label">Street Address</label>
                    <input type="text" class="form-control" id="street" name="shippingAddress[street]" value="<%= formData.street || '' %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="ward" class="form-label">Ward</label>
                    <input type="text" class="form-control" id="ward" name="shippingAddress[ward]" value="<%= formData.ward || '' %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="district" class="form-label">District</label>
                    <input type="text" class="form-control" id="district" name="shippingAddress[district]" value="<%= formData.district || '' %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="shippingAddress[city]" value="<%= formData.city || '' %>" required />
                  </div>
                </div>

                <% if (signupError) { %>
                  <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    <%= signupError %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                <% } %>

                <button type="submit" class="btn btn-success w-100">Create Account</button>
                <div class="form-text text-center mt-2">
                  By creating an account, you will receive your password via email.
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
  
  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Modal giỏ hàng -->
  <div id="cartModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Giỏ hàng</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <ul id="cartItems" class="list-group"></ul>
        </div>
        <div class="modal-footer">
          <button id="clearCart" class="btn btn-danger me-auto">Xóa tất cả</button>
          <a href="/cart" class="btn btn-primary">Go to Cart</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/main.js"></script>
</body>

</html>