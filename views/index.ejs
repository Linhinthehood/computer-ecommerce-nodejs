<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>We Sell Clothes</title>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<style>
    body {
        background-color: #fff;
    }

    .card {
        border: none;
        box-shadow: none !important;
        transition: 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .card h5 {
        font-family: 'Anton', sans-serif;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .card:hover .card-img-top {
        filter: grayscale(0%);
    }

    .badge {
        background: black;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-outline-dark {
        font-family: 'Anton', sans-serif;
        border: 2px solid black;
        text-transform: uppercase;
        transition: 0.3s;
    }

    .btn-outline-dark:hover {
        background: black;
        color: white;
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    .main-container {
        max-width: 1200px;
        margin: 30px auto;
    }
</style>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>
    <!-- Carousel -->
    <%- include('partials/carousel') %>

    <!-- Modal giỏ hàng -->
    <div id="cartModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Giỏ hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <ul id="cartItems" class="list-group"></ul>
                </div>
                <div class="modal-footer">
                    <button id="clearCart" class="btn btn-danger me-auto">Xóa tất cả</button>
                    <a href="/cart" class="btn btn-primary">Go to Cart</a>
                </div>
            </div>
        </div>
    </div>

    <!-- CSS cho cái navigation -->
    <style>
        .navbar {
            transition: all 0.3s ease-in-out;
        }

        .navbar.fixed-top {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: rgba(255, 255, 255, 0.95);
        }

        .form-control:focus {
            border-color: #f04e30;
            box-shadow: 0 0 5px rgba(240, 78, 48, 0.5);
        }

        .btn-dark:hover {
            background-color: #f04e30;
            border-color: #f04e30;
        }

        .text-dark:hover {
            color: #f04e30 !important;
        }
    </style>

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row mb-3">
                <div class="col-12 col-md-6 text-start">
                    <label for="sortSelect" class="fw-bold">Sort by:</label>
                    <select id="sortSelect" class="form-select d-inline-block w-auto ms-2">
                        <option value="">Default</option>
                        <option value="asc">Price: Low to High</option>
                        <option value="desc">Price: High to Low</option>
                    </select>

                    <!-- Sort script -->
                    <script>
                        document.getElementById("sortSelect").addEventListener("change", function () {
                            const selectedValue = this.value;
                            const currentUrl = new URL(window.location.href);

                            if (selectedValue) {
                                currentUrl.searchParams.set("sort", selectedValue);
                            } else {
                                currentUrl.searchParams.delete("sort");
                            }

                            window.location.href = currentUrl.toString();
                        });

                        // Maintain selected option after page reload
                        const urlParams = new URLSearchParams(window.location.search);
                        const sort = urlParams.get("sort");
                        if (sort) {
                            document.getElementById("sortSelect").value = sort;
                        }
                    </script>
                </div>
            </div>

            <!-- For each section -->
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% products.forEach(product=> { %>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image -->
                            <a href="/product/<%= product._id %>">
                                <img class="card-img-top" src="<%= product.images[0] %>" alt="<%= product.name %>" />
                            </a>
                            
                            <!-- Product details -->
                            <div class="card-body p-3">
                                <!-- Brand & Category -->
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="badge bg-secondary"><%= product.brand %></span>
                                    <span class="badge bg-primary"><%= product.category %></span>
                                </div>
                                
                                <!-- Name -->
                                <h5 class="card-title mb-2">
                                    <a href="/product/<%= product._id %>" class="text-dark text-decoration-none">
                                        <%= product.name %>
                                    </a>
                                </h5>
                            
                                <!-- Short Description -->
                                <p class="card-text small mb-2"><%= product.short_description %></p>
                            
                                <!-- Tags -->
                                <div class="mb-2">
                                    <% product.tags.forEach(tag => { %>
                                        <span class="badge bg-light text-dark me-1">#<%= tag %></span>
                                    <% }); %>
                                </div>
                            
                                <!-- Variants -->
                                <div class="small mb-2">
                                    <% product.variants.forEach(variant => { %>
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <span><%= variant.type %></span>
                                            <span class="fw-bold"><%= variant.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %> ₫</span>
                                        </div>
                                    <% }); %>
                                </div>
                            
                                <!-- Rating and Reviews -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <% for(let i = 0; i < Math.floor(product.average_rating); i++) { %>
                                            <i class="bi bi-star-fill text-warning"></i>
                                        <% } %>
                                        <% if(product.average_rating % 1 !== 0) { %>
                                            <i class="bi bi-star-half text-warning"></i>
                                        <% } %>
                                        <span class="ms-1">(<%= product.average_rating %>)</span>
                                    </div>
                                    <span class="small text-muted"><%= product.total_reviews %> reviews</span>
                                </div>
                            </div>
                        
                            <!-- Price Range -->
                            <div class="card-footer bg-transparent border-top-0 p-3">
                                <% 
                                    const prices = product.variants.map(v => v.price);
                                    const minPrice = Math.min(...prices);
                                    const maxPrice = Math.max(...prices);
                                %>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <script>
                    document.querySelectorAll(".product-link").forEach(item => {
                        item.addEventListener("click", function (event) {
                            event.preventDefault();
                            console.log("Clicked Product ID:", this.dataset.id);
                            window.location.href = this.href; // Navigate to detail page
                        });
                    });
                </script>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .badge {
            font-size: 0.8rem;
        }
        .star-rating {
            color: #ffc107;
        }
    </style>
</body>

</html>
